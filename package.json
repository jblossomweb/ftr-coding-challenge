{
  "name": "ftr-coding-challenge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "cli": "node cli.js",
    "web": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "react-scripts test --env=jsdom --coverage --no-cache",
    "storybook": "start-storybook -s ./public -p 9001 -c .storybook",
    "build-storybook": "build-storybook -s ./public -o .storybook/build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/app/**/*.{js,jsx,ts,tsx}",
      "!src/app/**/stories.{js,jsx,ts,tsx}",
      "!src/app/**/*.stories.{js,jsx,ts,tsx}",
      "!src/app/**/*.test.{js,jsx,ts,tsx}",
      "!src/app/config.{js,jsx,ts,tsx}"
    ]
  },
  "dependencies": {
    "connected-react-router": "^6.5.2",
    "history": "^4.9.0",
    "immutable": "^4.0.0-rc.12",
    "polished": "^3.4.1",
    "react": "^16.8.6",
    "react-async-poll": "^1.0.0",
    "react-dom": "^16.8.6",
    "react-redux": "^7.1.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "recharts": "^1.7.1",
    "redux": "^4.0.4",
    "redux-immutable": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.1",
    "styled-components": "^4.3.2",
    "typescript": "3.4.5",
    "window-or-global": "^1.0.1",
    "with-immutable-props-to-js": "^2.0.0"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/history": "^4.7.2",
    "@types/jest": "24.0.15",
    "@types/lodash": "^4.14.137",
    "@types/node": "12.6.8",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/react-redux": "^7.1.2",
    "@types/react-router-dom": "^4.3.4",
    "@types/recharts": "^1.1.21",
    "@types/redux-immutable": "^4.0.1",
    "@types/storybook__addon-knobs": "^5.0.4",
    "@types/storybook__react": "^4.0.2",
    "@types/styled-components": "^4.1.18",
    "@types/window-or-global": "^1.0.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0"
  }
